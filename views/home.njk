{% set title = "Strava" %}
{% extends "html.njk" %}

{% block body %}
<div class="h-card">
  <img class="u-photo" alt="photo of {{ athlete.firstname }}"
       src="{{ athlete.profile }}"/>
  <div class="p-name">{{ athlete.firstname }} {{ athlete.lastname }}</div>
</div>

<form method="POST" action="/deauthorize">
<input type="submit" value="Deauthorize" />
</form>

<div>
{%if isFetching %}
<p><strong>Still fetching data. <a href="/">Refresh page in a few seconds see new activities</a>.</strong></p>
{% endif %}
<p>Total Activities: {{ activities.length }}</p>
<table>
<th>Date</th><th>Type</th><th>Distance (m)</th>
{% for activity in activities %}
<tr>
<td>{{ activity.startDate }}</td>
<td>{{ activity.type }}</td>
<td>{{ activity.distance }}</td>
</tr>
{% endfor %}
</table>
</div>

<pre>{{ activities | dump }}</pre>
{% endblock %}